<div 
    xmlns="http://www.w3.org/1999/xhtml" 
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="api.main_template.macros['master']">

  <div metal:fill-slot="content">
    
    <div id="content">
      
      <div id="subnav" tal:condition="pastes">
        <div id="news">
          <div class="newsheader">Recent Pastes</div>
          <ul>
            <li tal:repeat="paste pastes[:5]">
              <a href="${paste.url}"
                 >${paste.author} on ${paste.date} (${paste.language or 'auto'})</a>
            </li>
          </ul>
        </div>
      </div>
      
      <div id="one">
        
        <h1>BFG Paste Bin</h1>
        <div class="message" tal:condition="message|nothing"
             tal:content="message">Error message</div>
        
        <div class="left">
          
          <style tal:content="style_defs"></style>
          
          <a href="${pastebin_url}">Return to main page</a>
          
          <h2>Paste Entry</h2>
          <span class="entryheader">Author:</span> ${author} <br/>
          <span class="entryheader">Date:</span> ${date} <br/>
          <span class="entryheader">Format:</span> ${lexer_name} <br/>
          <div>${paste}</div>
          
        </div>
        
      </div>
    </div>
  </div>
</div>

